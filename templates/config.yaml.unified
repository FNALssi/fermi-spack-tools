# -------------------------------------------------------------------------
# This the default spack configuration  for "unified" layout, usable
# by spack, and ups/upd.
#
# It should be installed in the per-spack area:
#   $SPACK_ROOT/etc/spack/config.yaml
# -------------------------------------------------------------------------
config:
  install_tree: $spack/../../..

  install_path_scheme: "${PACKAGE}/${VERSION}/${ARCHITECTURE}-${COMPILERNAME}-${COMPILERVER}-${HASH}"

